section#about-section
    .content
        h1.header #{t("about.name", lang)}
        .subheading
            | #{t("about.address", lang)}  ·  #{t("about.phone", lang)}  ·  
            a(href="mailto:" + t("about.email", lang)) #{t("about.email", lang)}
        p.lead #{t("about.summary", lang)}
        .social-icons
            a.social-icon(target="_blank" href=t("about.linkedin", lang) style={background: "#0067be"})
                i.fab.fa-linkedin-in
            a.social-icon(target="_blank" href=t("about.github", lang) style={background: "black"})
                i.fab.fa-github
            a.social-icon(target="_blank" href=t("about.twitter", lang) style={background: "#00a3ee"})
                i.fab.fa-twitter